@ECHO OFF

SET APPLICATION_NAME=MockTCPServer
SET SCRIPT_FOLDER=%~dp0
SET WORKING_FOLDER=%SCRIPT_FOLDER%..
SET MAINCLASS=io.cloudracer.mocktcpserver.MockTCPServer
SET CLASSPATH=*
SET SERVER_PARAMS=-Dmocktcpserver.configuration.initialisation.enabled=true

ECHO APPLICATION_NAME:%APPLICATION_NAME%.
ECHO SCRIPT_FOLDER:%SCRIPT_FOLDER%.
ECHO WORKING_FOLDER:%WORKING_FOLDER%.
ECHO JAR_FILENAME:%JAR_FILENAME%.
ECHO MAINCLASS:%MAINCLASS%.
ECHO CLASSPATH:%CLASSPATH%.
ECHO SERVER_PARAMS:%SERVER_PARAMS%.

START "%APPLICATION_NAME%" /D "%WORKING_FOLDER%" /B java %SERVER_PARAMS% -classpath %CLASSPATH% %MAINCLASS% %1 %2